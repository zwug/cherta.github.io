@import 'jeet'
@import '_settings'

normalize-css()
base()

body
  background-color: $highlight-color

.content
  center(max_width = 650px)

h1, h2, h3
  font-family: $open-sans
  font-weight: 800
  letter-spacing: -2px
  text-transform: uppercase

h1
  font-size: 5.875em
  line-height: 84px

h2
  font-size: 4.875em
  line-height: 68px

h3
  font-size: 3.875em
  line-height: 52px

h4
  font-size: 2.125em
  font-weight: 500
  margin-bottom: 0

p
  font-size: 2.125em
  font-weight: 500
  line-height: 48px
  margin-bottom: 48px

ul li
  font-size: 1.8em
  font-weight: 500

a
  color: $font-color
  padding: 0 3px

a:hover
  color: $highlight-color
  background-color: $complementary-color
  text-decoration: none

.title
  a
    text-decoration: none
    padding: 0

  a:hover
    background-color: transparent
    color: $complementary-color
